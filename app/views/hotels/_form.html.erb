<%= form_for(@hotel) do |f| %>
        <% if @hotel.errors.any? %>
            <div id="error_explanation">
                <ul>
                <% @hotel.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
   <div class="field">
     <%= f.label :title %><br>
     <%= f.text_field :title %>
   </div>
    <div class="field">
      <%= f.label :price %><br>
      <%= f.number_field(:price, in: 1.0..200.0, step: 1) %>
    </div>
    <div class="field">
      <%= f.label 'Breakfast included?' %><br>
      <%= f.check_box(:breakfast) %>
    </div>
    <div class="field">
      <%= f.label 'Description' %><br>
      <%= f.text_field :description %>
    </div>
    <div class="field">
      <%= f.label 'Country, State, City, Street' %><br>
      <%= f.text_field :address %>
    </div>
    <div class="field">
      <%= f.label :photo %><br>
      <%= f.file_field :photo %>
    </div>
    <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
